<div class="content-wrapper auth-wrapper">
    <form class="auth-form" action="" method="POST">
        <h2>Register</h2>
        <div class="auth-form-field">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" required maxlength="25">
        </div>
        <div class="auth-form-field">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" required maxlength="30">
        </div>
        <div class="auth-form-field">
            <label for="password">Password</label>
            <input type="text" name="password" id="password" required maxlength="25">
        </div>
        <button class="btn-blue-bg" type="submit">Register</button>
    </form>
</div>