<div class="review-form-field">
    <% const rating = review.rating;%> 
    <fieldset class="starability-basic">
        <legend>Rating:</legend>
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" <%= (rating === 1) ? 'checked' : '' %>  />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" <%= (rating === 2) ? 'checked' : '' %> />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" <%= (rating === 3 || !rating) ? 'checked' : '' %> />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" <%= (rating === 4) ? 'checked' : '' %> />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" <%= (rating === 5) ? 'checked' : '' %> />
        <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
</div>

<div class="review-form-field">
    <label class="review-form-label" for="review">Review</label>
    <textarea class="review-form-control" name="review" id="review" cols="30" rows="3" required><%=review.review%></textarea>
</div>