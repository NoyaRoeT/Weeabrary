<div class="content-header">
    <div class="content-wrapper chapter-header">
        <h2 class="story-title"><%= story.title %></h2>
        <div class="chapter-story-image">
            <% if (story.image.url) { %> 
                <img src= <%= story.thumbnail %> alt="cover image">
            <% } %> 
        </div>
    </div>
</div>
<div class="content-wrapper">
    <form class="myworks-chapter-form" action="/myworks/<%= story.slug %>/chapters" method="POST">
        <%- include("_form_fields") %>
        <button class="btn-blue-bg" type="submit">Add Chapter</button> 
    </form>
</div>